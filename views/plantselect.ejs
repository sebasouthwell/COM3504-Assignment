<%- include('partials/header',{title: title,stylesheets: stylesheets, javascripts: javascripts}) %>
<div class="container pt-1 pb-1">
    <div class="row">
        <div class="pb-2 bg-light rounded">
            <div class="p-2 text-center">
                <h2 class="text-primary">Search </h2>
            </div>
            <div class="pb-2">
                <form>
                    <div class="form-group" >
                        <label for="plantName">Plant name</label>
                        <input type="text" class="form-control" id="plantName" placeholder="Enter plant name">
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select class="form-control" id="status">
                            <option>Any</option>
                            <option>Identified</option>
                            <option>Pending</option>
                        </select>
                    </div>
                    <div
                    <div class="form-group">
                        <label for="sortBy">Sort by</label>
                        <select class="form-control" id="sortBy">
                            <option value="t-mr">Most recent</option>
                            <option value="t-lr">Least recent</option>
                            <option value="n-az)">Name (A-Z) [Unknown at End]</option>
                            <option value="n-za">Name (Z-A)[Unknown at Top]</option>
                            <option value="l-cl">Closest Location</option>
                            <option value="l-fl">Furthest Location</option>
                        </select>
                    </div>
                    <div class="form-group hidden">
                        <input class="form-control lat_nav" type="string" id="lat" name="lat" value="">
                        <input class="form-control long_nav" type="string" id="long" name="long" value="">
                    </div>
                    <input class="btn btn-success mt-2 w-100" type="submit" value="Search Query">
                </form>
            </div>
        </div>
        <div class="pb-2 bg-light rounded mt-1">
            <div class="p-2 text-center">
                <h2 class="text-primary"> Results</h2>
            </div>
            <div class="d-flex justify-content-center  p-2 text-center">
                <h3 class="hidden" id="notFoundSightings"> No sightings found</h3>
                <div class="d-flex container row px-0" id="sightings">
                    <div class="card text-white w-24 p-0 m-1">
                        <a href="https://www.google.com"><img class="card-img w-100" src="https://hips.hearstapps.com/hmg-prod/images/high-angle-view-of-variety-of-succulent-plants-royalty-free-image-1584462052.jpg" alt="Card image">
                        <div class="card-img-overlay mouseover-overlay">
                            <h5 class="card-title text-white">Card title</h5>
                        </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>